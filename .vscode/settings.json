{
  "cSpell.words": [
    "abortable",
    "airbnb",
    "buildpack",
    "clsx",
    "codrops",
    "commitlint",
    "contenteditable",
    "ddpx",
    "devtool",
    "downlevel",
    "dppx",
    "dragexit",
    "flexbox",
    "gitlab",
    "grecaptcha",
    "liga",
    "lookaround",
    "minmax",
    "mobx",
    "noconflict",
    "okaidia",
    "overscroll",
    "pacman",
    "plusplus",
    "predeploy",
    "prismjs",
    "recaptcha",
    "repos",
    "scrollable",
    "scrollbar",
    "sitekey",
    "srgb",
    "tabindex",
    "todos",
    "unhighlight"
  ],
  "git.ignoreLimitWarning": true,
  "files.exclude": {
    "**/.git": false
  },
  "sonarlint.connectedMode.project": {
    "projectKey": "frontend-tricks"
  },
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.tabSize": 2
}
